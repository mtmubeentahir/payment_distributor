<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<div id="orders">
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Merchant Reference</th>
        <th>Order Amount</th>
        <th>Created At</th>
        <th>Company Commission</th>
        <th>Merchant Payment</th>
        <th>Monthly Fee Adjustment</th>
        <th>Show</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.merchant_reference %></td>
          <td><%= order.amount %></td>
          <td><%= order.created_at %></td>
          <td><%= order&.disbursment&.commission %></td>
          <td><%= order&.disbursment&.merchant_payment %></td>
          <td><%= order&.disbursment&.monthly_fee&.amount %></td>
          <td> <%= link_to "Show this order", order %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%== pagy_nav(@pagy) %>
